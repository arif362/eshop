<%= form_for @order do |f| %>
    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :address %><br>
      <%= f.text_area :address %>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.email_field :email %>
    </div>
    <div class="field">
      <%= f.label :pay_type %><br>
      <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: 'Select a Payment Method' %>
    </div>
    <div class="actions">
      <%= f.submit 'Place Order' %>
    </div>
<% end %>